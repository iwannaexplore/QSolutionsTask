            </div>
            <div class="col">
                <label class="form-label">Postal Code</label>
                <input type="text" name="m_sZIP" value="@Model.m_sZIP" class="form-control">
            </div>
            <div class="col">
                <label class="form-label">City</label>
                <input type="text" name="m_sCity" value="@Model.m_sCity" class="form-control">
            </div>


        </div>
        <div class="row">

            <div class="col">
                <label class="form-label">Street</label>
                <input type="text" name="m_sStreet" value="@Model.m_sStreet" class="form-control">
            </div>
            <div class="col">
                <label class="form-label">House number</label>
                <input type="number" name="m_iHouseNo" value="@Model.m_iHouseNo" class="form-control">
            </div>

            <div class="col">

                <label class="form-label">District</label>
                <input type="text" name="m_sDistrict" value="@Model.m_sDistrict" class="form-control">
            </div>

        </div>

        <div class="row">
            <div class="col ">
                <button class="btn btn-warning mt-2  w-25" id="validateButton">Validate</button>
                <button type="button" id="selectAddress" class="btn btn-secondary mt-2  w-25" data-bs-toggle="modal" data-bs-target="#AddressesModal">
                    Select Addresses
                </button>
                <button type="button" class="btn btn-outline-success mt-2 w-25" id="submitButton">Submit</button>

            </div>
        </div>
    </form>
