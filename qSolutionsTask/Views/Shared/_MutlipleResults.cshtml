<div class="modal fade" id="AddressesModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog .modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Select address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Similarity</th>
                        <th scope="col">Country</th>
                        <th scope="col">Zip</th>
                        <th scope="col">City</th>
                        <th scope="col">Street</th>
                        <th scope="col">District</th>

                    </tr>
                    </thead>
                    <tbody>
                    @for (var i = 0; i < Model.Length; i++)
                    {
                        var elem = Model[i];
                        var index = i;

                        <tr formIndex="@index" onclick="SelectTrElement(this)">
                            <th scope="row">@elem.Similarity</th>
                            <td>@elem.Address.m_sCountry</td>
                            <td>@elem.Address.m_sZIP</td>
                            <td>@elem.Address.m_sCity</td>
                            <td>@elem.Address.m_sStreet @(elem.Address.m_iHouseNo == 0 ? $"{elem.Address.m_iHouseNoStart}-{elem.Address.m_iHouseNoEnd}" : elem.Address.m_iHouseNo)</td>
                            <td>@elem.Address.m_sDistrict</td>

                        </tr>
                    }

                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button id="saveSelected" class="btn btn-outline-success" data-bs-dismiss="modal" onclick="UseSelectedAddress()">Save Selected</button>
                <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal" form="addressForm">Save Original</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>